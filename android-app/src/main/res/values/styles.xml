<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PresetSuiteDropdownItemStyle"
           parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PresetButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="android:fontFamily">Lucida</item>
        <item name="android:backgroundTint">@color/fhauGrey</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">90dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/unused_slot</item>
        <item name="android:state_multiline">true</item>
        <item name="android:alpha">0.2</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
